<html>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% messages.map((message) => { %>
      <li>
        <%= message.text %>, Posted by <%= message.username %> on <%=
        message.added %>
        <a href="/message/<%= message.id %>">View Message</a>
      </li>
      <% }) %>
    </ul>

    <a href="/new">Post A New Message</a>
  </body>
</html>
